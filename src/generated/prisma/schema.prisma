generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  name         String?
  passwordHash String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  caseStudies  CaseStudy[]
}

model CaseStudy {
  id        String   @id @default(uuid())
  title     String
  template  String
  status    String   @default("draft")
  content   String   @default("")
  answers   String   @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model MarketingContent {
  id             String   @id @default(uuid())
  designer       String   @unique
  heroTitle      String
  heroSubtitle   String
  highlights     String // JSON string
  tagline        String
  caseStudyCount Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
